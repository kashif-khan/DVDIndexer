        <Label Content="Output Path:" HorizontalAlignment="Left" Margin="10,103,0,0" VerticalAlignment="Top" Width="77"/>
        <TextBox HorizontalAlignment="Left" Name="txtOutput" Margin="99,105,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="608" Height="22"/>
        <Button Content="Browse" HorizontalAlignment="Right" Margin="0,96,21,298" Click="Button_Click_1"/>

        <Button Content="Start"  Name="btnStart" Margin="48,210,90,177" Click="btnStart_Click"/>
        <Label Content="UniqueId:" HorizontalAlignment="Left" Margin="10,167,0,0" VerticalAlignment="Top" Width="77"/>
        <TextBox HorizontalAlignment="Left" x:Name="txtOutput_Copy" Margin="99,169,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="608" Height="22"/>
        <Button Content="Random ID" HorizontalAlignment="Right" Margin="0,160,10,234" Click="btnRandom_Click"/>

    </Grid>
</Window>
