        <Label Content="Input Folder:" HorizontalAlignment="Left" Margin="10,49,0,0" VerticalAlignment="Top" Width="77"/>
        <TextBox HorizontalAlignment="Left" Name="txtInput" Margin="99,51,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="608" Height="22"/>
